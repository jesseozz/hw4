<h1><%= @place["name"] %></h1>

<% if @current_user != nil %>
<h2>My Entries</h2>

<div class="row">
<% for entry in @entries %>
<div class="col-sm-6 col-md-3">
  <h3><%= entry["title"] %></h3>
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
  </div>
  <% if entry.uploaded_image.attached? %>
    <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
  <% else %>
<% end %>
</div>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>
<% else %>
  You must first <a href="/login">login</a> to view your entries.
<% end %>