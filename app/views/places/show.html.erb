<h1 style="margin-bottom: 20px;"><%= @place["name"] %></h1>

<% if @current_user != nil %>

<div style="margin-bottom: 20px;" class="nav-item">
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Entry</a>
</div>

<div class="row">
  <% for entry in @entries %>
    <div class="col-sm-6 col-lg-4">
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <% if entry.uploaded_image.attached? %>
        <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
      <% else %>
      <% end %>
    <div>
      <p><%= entry["description"] %></p>
    </div>
    </div>
<% end %>
</div>

<p>
  
</p>

<p>
  <button href="/places" class="btn btn-primary">Back to All Places</button>
</p>
<% else %>
  You must first <a href="/login">login</a> to view your entries.
<% end %>